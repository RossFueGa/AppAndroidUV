<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/circulo_verde"
            android:layout_width="526dp"
            android:layout_height="165dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/cicle_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="27dp"
            android:textColor="@color/txtNegro"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="356dp"
            android:layout_height="193dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:src="@drawable/img_welcome" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtMatriculaLogin"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:hint="@string/matriculaAlumno"
            app:startIconDrawable="@drawable/ic_casino_black_24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMatriculaAlumnoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="9"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:hint="@string/passwordAlumno"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/ic_lock_24px">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passAlumnoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="8"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/aceptar_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:background="@drawable/btn_registro_alumno"
            android:text="Aceptar"
            android:textColor="@color/txtBlanco"
            />
        <TextView
            android:id="@+id/txt_contrasena_olvidada"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="@color/txtClaro"
            android:layout_marginBottom="45dp"
            android:text="¿Olvidaste tu contraseña?" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>