<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txtBlanco"
    android:layout_gravity="center"
    tools:context=".RegistroAcademico">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_encabezado_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Registro AcadÃ©mico"
            android:textColor="@color/txtAzul"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bgapp"
            android:layout_width="287dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/profesor" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombreAcademico"
            app:startIconDrawable="@drawable/ic_person_black_24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombreAcademico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/apellidoPaterno"
                android:layout_weight="1"
                app:startIconDrawable="@drawable/ic_person_black_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtApellidoPaternoAcademico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/apellidoMaterno"
                android:layout_weight="1"
                app:startIconDrawable="@drawable/ic_person_black_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtApellidoMaternoAcademico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtMatriculaLabel"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/matriculaAcademico"
            app:startIconDrawable="@drawable/ic_casino_black_24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtMatriculaAcademico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="9"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordAlumno"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/ic_lock_24px">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passAcademico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="8"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnAceptarRegistroAcademico"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn_registro_usuario"
            android:text="Aceptar"
            android:layout_marginBottom="45dp"
            android:textColor="@color/txtBlanco" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>