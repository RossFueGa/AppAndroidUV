<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/bgapp"
            android:layout_width="181dp"
            android:layout_height="157dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/bienvenida" />

        <TextView
            android:id="@+id/txt_Bienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" BIENVENIDO "
            android:textColor="@color/txtNegro"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_Bienvenida1"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="19dp"
            android:text="Bienvenido a la comunidad de la Universidad Veracruzana"
            android:textColor="@color/txtNegro"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_inicio_sesion"
            android:layout_width="317dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_ripple"
            android:text="Inicia Sesión"
            android:textColor="@color/txtBlanco"
            android:textSize="17dp" />
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="120dp"
                android:layout_height="1.7dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/separador" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o"
                android:textSize="17dp"
                android:textColor="@color/txtNegro"
                />


            <View
                android:layout_width="120dp"
                android:layout_height="1.7dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/separador" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="244dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_u_nuevo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:inputType="textCapWords|textAutoCorrect"
                android:text="¿Usuario Nuevo?"
                android:textAlignment="center"
                android:textColor="@color/txtNegro"
                android:textSize="17dp"
                android:textStyle="" />

            <TextView
                android:id="@+id/txt_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:inputType="textCapWords|textAutoCorrect"
                android:text="Registrate"
                android:textAlignment="center"
                android:textColor="@color/txtNegro"
                android:textSize="17dp"
                android:textStyle="bold" />
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>