<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.FormularioApartado">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="704dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/goBackFormApartado"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/espalda_verde" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:text="Formulario de Apartado"
                    android:textColor="@color/txtVerde"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:text="Grupo"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtMatriculaLogin"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/grupoFormularioApartado"
                    app:startIconDrawable="@drawable/ic_group_black_24dp"
                    android:editable="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtGrupoFormularioApartado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:layout_gravity="center_horizontal"
                        android:textSize="25sp"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textColor="@color/txtVerde"
                        android:editable="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="Horario"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/pickTimeDe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="De"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/backbtn"/>

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:textColor="@color/txtVerde"
                            android:textStyle="bold"
                            android:background="@drawable/backtextview"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Button
                            android:id="@+id/pickTimeA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="a"
                            android:layout_weight="1"
                            android:background="@drawable/backbtn"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/txt_timeA"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:textColor="@color/txtVerde"
                            android:textStyle="bold"
                            android:background="@drawable/backtextview"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Fecha"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:id="@+id/btnDiaApartado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DÃ­a"
                        android:layout_weight="3"
                        android:background="@drawable/backbtn"
                        android:layout_marginRight="5dp"/>

                    <EditText
                        android:id="@+id/txtDiaApartado"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="25sp"
                        android:editable="false"
                        android:background="@drawable/backtextview"
                        android:textColor="@color/txtVerde"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Serial"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aula"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerAulaApartado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                             />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edificio"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerEdificioApartado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_aceptar_apartado"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/btn_aceptar_verde"
                    android:text="Apartar"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>